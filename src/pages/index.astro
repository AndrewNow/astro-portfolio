---
import Layout from "../layouts/BaseLayout.astro";
import Landing from "../components/homepage/landing/Landing.astro";
import ProjectContainer from "../components/homepage/ProjectContainer.astro";

const projectData = [
  {
    title: "Revue Moebius",
    description:
      "Revue Moebius is a literature publication house that needed a website overhaul to refresh their visual identity and accommodate their digital poetry residencies.",
    imageUrl: "/assets/rm/thumbnail.png",
    slug: "revue-moebius",
    design: true,
    development: true,
  },
  {
    title: "Eight Branches",
    description:
      "Eight Branches is a traditional Chinese medicine academy based in Toronto, Canada. Rebranded with an approachable, professional and refreshing tone.",
    imageUrl: "/assets/8b/thumbnail.png",
    slug: "eight-branches",
    design: true,
    development: true,
  },
  {
    title: "Wonder Works",
    description:
      "Wonder Works is a Roblox Metaverse gaming development studio based in Austin, Texas. Creating a playful, animated website for a younger (but still tech-savvy!) target demographic.",
    imageUrl: "/assets/ww/thumbnail.png",
    slug: "eight-branches",
    design: true,
    development: true,
  },
];

const seo = {};
---

<Layout seo={seo}>
  <div class="page-backdrop">
    <Landing />
    <section class="project-section">
      <div class="project-section-header">
        <h4>Select Projects</h4>
        <div>
          <h4 class="project-length">
            {projectData.length}
          </h4>
        </div>
      </div>
      {
        projectData.map((project) => {
          return <ProjectContainer data={project} />;
        })
      }
    </section>
  </div>
</Layout>

<style lang="scss">
  .page-backdrop {
    background: var(--grey-200);
  }
  .project-section  {
    background: var(--white);
    border-radius: var(--border-xl);
    padding: 3rem;
    margin: 1.5rem 0;
  }
  .project-section-header {
    display: flex;
    justify-content: space-between;
    width: 92.5%;
    margin: 0 auto;
    h4 {
      letter-spacing: -0.1rem;
      color: var(--grey-300);
      font-weight: 100;
    }
    .project-length {
      display: flex;
      align-items: center;
    }
    .project-length:before {
      content: "";
      background: var(--blue);
      aspect-ratio: 1/1;
      width: 13px;
      height: 13px;
      display: block;
      margin-right: 1rem;
      transform: translateY(-3px);
      border-radius: 50px;
    }
  }

  @media (max-width: 992px) {
    
  }
</style>

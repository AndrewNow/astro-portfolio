---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";
// import  { BaseHeadProps } from "../components/BaseHead.astro";

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- <slot name="head-bottom" /> -->
  </head>
  <body>
    <Navbar />
    <!-- <slot name="header" /> -->
    <main>
      <slot />
    </main>
    <!-- <slot name="footer" /> -->
    <script>
      import Lenis from "@studio-freight/lenis";

      // Check if user is on macOS
      const isMacOS = navigator.userAgent.indexOf("Mac OS X") !== -1;

      const lerp = isMacOS ? 0.4 : 0.1;
      const lenis = new Lenis({
        lerp,
      });

      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }
      requestAnimationFrame(raf);

      // Assign the Lenis instance to a global variable
      window.lenis = lenis;
    </script>
    <script src="../components/utils/BlurUp.js"></script>
    <script src="../components/utils/linkHover.js"></script>
    <script src="../components/utils/imageBulge/index.js"></script>
  </body>
</html>

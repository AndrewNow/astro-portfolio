---
import Layout from "./BaseLayout.astro";
import Heading from "../components/work/Heading.astro";
import NextProject from "../components/work/NextProject.astro";
import EndArticleStamp from "../components/EndArticleStamp.astro";

const { seo, data } = Astro.props;
---

<Layout seo={seo}>
  <article class="article">
    <Heading data={data} />
    <slot />
  </article>
  <EndArticleStamp />
  <NextProject data={data.nextProjectData} />
</Layout>

<style lang="scss">
  .article {
    width: var(--project-width);
    margin: 0 auto;
    position: relative;
  }
</style>

---
import { Image } from "@astrojs/image/components";
const { data } = Astro.props;
---

<div class="project-wrapper">
  <div class="image-wrapper">
    <Image
      src={data.imageUrl}
      alt=`Project thumbnail for ${data.title}`
      width={1463}
      height={686}
      format="webp"
      quality={100}
      fit="cover"
      class="image-inner"
    />
  </div>
  <div class="text-wrapper">
    <h1>
      {data.title}
    </h1>
    <p>{data.description}</p>
    <div class="pills">
      {
        data.design && (
          <div class="pill" style={{ background: "var(--green)" }}>
            <h6>Design</h6>
          </div>
        )
      }
      {
        data.development && (
          <div class="pill" style={{ background: "var(--yellow)" }}>
            <h6>Web development</h6>
          </div>
        )
      }
    </div>
  </div>
</div>

<style lang="scss">
  .project-wrapper {
    width: min(80vw, 1600px);
    background: var(--grey-200);
    border-radius: 30px;
    margin: 100px auto;
    padding: 3rem 3rem;
  }
  .image-wrapper {
    overflow: hidden;
    border-radius: 20px;
    aspect-ratio: 1463/583;
    height: auto;
    width: 100%;
    display: grid;
    place-items: center;
    .image-inner {
      transform: translateY(-50px);
    }
  }
  .text-wrapper {
    margin-top: 3rem;
    h1 {
      line-height: 100%;
      margin-bottom: 1rem;
    }
    p {
      max-width: 990px;
      color: var(--grey-300);
    }
  }
  .pills {
    display: flex;
    margin-top: 1rem;

    .pill {
      margin-right: 1rem;
      border-radius: 20px;
      padding: 8px 30px;
    }
  }
</style>

<style lang="scss">
  @keyframes blink {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.24;
    }
    100% {
      opacity: 1;
    }
  }
  .landing-wrapper {
    width: min(100%, 2000px);
    border-radius: var(--border-xl);
    overflow: hidden;
    background: var(--white);
    position: relative;
  }
  .marquee-wrapper {
    border-radius: var(--border-l);
    margin: 2.5rem auto;
    // background: var(--grey-200);
    background: #e7e7e7;
    // height: 500px;
    height: auto;
    position: relative;
    width: 96%;
  }
  .details-wrapper-flex {
    width: 90%;
    margin: 5rem auto;
    margin-bottom: 4rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  .detail-text {
    letter-spacing: 0.03rem;
    text-transform: uppercase;
    &:not(.label) {
      color: var(--grey-300);
    }
  }
  a:hover {
    // transition: var(--hover-transition);
    animation: blink 0.76s infinite ease-in-out;
    // color: var(--grey-200);
  }
  .details-flex {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    .label {
      margin-right: 2rem;
      color: var(--grey-200);
    }
  }

  @media (max-width: 1280px) {
    .details-wrapper-flex {
      small {
        font-size: 12px;
      }
    }
  }
  @media (max-width: 992px) {
    .marquee-wrapper {
      width: 92.5%;
      margin: 1.25rem auto;
    }
    .details-wrapper-flex {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-gap: 2rem;
      margin: 4rem auto;
    }
    .detail-text {
      width: 100%;
    }
    .details-flex {
      flex-direction: column;
      .label {
        margin-right: 0;
        margin-bottom: 0.5rem;
      }
    }
  }

  @media (max-width: 576px) {
    .details-wrapper-flex {
      small {
        font-size: 12px;
        letter-spacing: 0.03rem;
      }
    }
  }
</style>

